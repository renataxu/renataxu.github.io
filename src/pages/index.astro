---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Renata - Paper Machinery Specialist',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Me',
        href: 'mailto:547587038@qq.com',
        target: '_blank',
        icon: 'tabler:mail',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero.png', alt: 'Paper Machinery Specialist' }}
  >
    <Fragment slot="title">
      Paper Machinery<br/>
      Sales Professional <span class="text-accent dark:text-white highlight">Renata</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Specialized in <span class="font-semibold">Headbox Systems</span> and Stock Preparation Equipment.</span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Paper Industry Expert.</span>
      Serving paper mills across China, South Asia, East Asia, and Southeast Asia with professional solutions and exceptional service.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Expertise"
    title="Professional Services"
    subtitle="Delivering high-quality paper machinery solutions with a focus on headbox systems and stock preparation equipment."
    items={[
      {
        title: 'Headbox Systems',
        description:
          'Specialized in hydraulic headbox systems, offering cutting-edge solutions for optimal paper formation and quality control.',
        icon: 'tabler:box',
      },
      {
        title: 'Stock Preparation',
        description:
          'Professional guidance on stock preparation equipment selection and optimization for various paper grades.',
        icon: 'tabler:settings',
      },
      {
        title: 'Technical Consultation',
        description:
          'Providing expert technical advice and customized solutions based on specific mill requirements and conditions.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Regional Coverage',
        description:
          'Extensive service network covering China, South Asia, East Asia, and Southeast Asia markets.',
        icon: 'tabler:world',
      },
      {
        title: 'After-Sales Support',
        description:
          'Comprehensive after-sales service ensuring smooth operation and optimal performance of installed equipment.',
        icon: 'tabler:headset',
      },
      {
        title: 'Industry Experience',
        description:
          'Rich experience in paper machinery sales with proven track record of successful implementations.',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="About Me"
    title="Professional Paper Industry Expert"
    items={[
      {
        title: 'Technical Expertise',
        description:
          'Specialized in hydraulic headbox systems and stock preparation equipment with over 10 years of industry experience.',
      },
      {
        title: 'International Experience',
        description:
          'Extensive experience serving clients across China, South Asia, East Asia, and Southeast Asia markets.',
      },
      {
        title: 'Customer-Focused Approach',
        description:
          'Dedicated to providing tailored solutions and comprehensive support to meet specific client requirements.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1521737604893-d14cc237f11d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Professional Portrait',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Your Trusted Paper Industry Partner</h3>
      Delivering innovative solutions and exceptional service to optimize your paper production
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Comprehensive Solutions',
        description: `From equipment selection to optimization and maintenance, I provide end-to-end support for your paper manufacturing needs.`,
      },
      {
        title: 'Technical Consultation',
        description:
          'Expert advice on process optimization, equipment upgrades, and troubleshooting to enhance your production efficiency.',
      },
      {
        title: 'After-Sales Support',
        description:
          'Reliable after-sales service ensuring smooth operation and optimal performance of your installed equipment.',
      },
      {
        title: 'Industry Network',
        description:
          'Strong connections with leading manufacturers and suppliers in the paper industry to deliver the best solutions.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80',
      alt: 'Team Collaboration',
    }}
  >
    <Fragment slot="content">Your success is my priority</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Quality Commitment',
        description:
          'Dedicated to delivering high-quality solutions that meet international standards and exceed client expectations.',
      },
      {
        title: 'Cost Efficiency',
        description:
          'Help optimize your investment by recommending cost-effective solutions without compromising on quality.',
      },
      {
        title: 'Timely Delivery',
        description:
          'Efficient project management ensuring timely delivery and implementation of solutions to minimize production downtime.',
      },
      {
        title: 'Continuous Support',
        description: 
          'Ongoing technical support and maintenance services to ensure long-term success of your paper manufacturing operations.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1553877522-43269d4ea984?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Industrial Equipment',
    }}
  >
    <Fragment slot="content">Excellence in every project</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How We Work Together"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Initial Consultation</span>',
        description:
          'We begin with a detailed discussion of your requirements, current challenges, and production goals to understand your specific needs.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: <span class="font-medium">Solution Design</span>',
        description:
          'Based on your requirements, I develop a customized solution proposal including equipment recommendations and optimization strategies.',
        icon: 'tabler:tool',
      },
      {
        title: 'Step 3: <span class="font-medium">Implementation</span>',
        description:
          'Once approved, we proceed with equipment procurement, installation supervision, and system optimization to ensure smooth integration.',
        icon: 'tabler:settings',
      },
      {
        title: 'Ongoing Support',
        description: 'Provide continuous technical support and maintenance services to ensure optimal performance.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Steps Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Areas of Expertise"
    subtitle="Comprehensive solutions for paper manufacturing industry"
    tagline="Services"
    items={[
      {
        title: 'Headbox Systems',
        description: "Expert in hydraulic headbox systems optimization and maintenance for superior paper formation.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Stock Preparation',
        description:
          "Professional guidance on stock preparation equipment selection and process optimization.",
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Process Optimization',
        description:
          'Technical consultation for improving production efficiency and paper quality.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Equipment Selection',
        description:
          "Expert advice on choosing the right equipment based on your specific production requirements.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Technical Support',
        description:
          'Comprehensive technical support including troubleshooting and maintenance guidance.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Training',
        description: 'Professional training for your technical team on equipment operation and maintenance.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Quality Control',
        description: 'Implementation of quality control measures to ensure consistent product quality.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Project Management',
        description:
          'Efficient project coordination and management from planning to implementation.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Maintenance Services',
        description: "Regular maintenance services to ensure optimal equipment performance.",
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about our paper industry solutions and services"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What types of paper machines do you specialize in?',
        description:
          'I specialize in hydraulic headbox systems and stock preparation equipment for various types of paper grades including printing paper, packaging paper, and specialty papers.',
      },
      {
        title: 'What regions do you cover?',
        description:
          'I provide services across China, South Asia, East Asia, and Southeast Asia markets, with extensive experience in international projects.',
      },
      {
        title: 'How do you ensure after-sales support?',
        description:
          'We provide comprehensive after-sales support including regular maintenance, troubleshooting, spare parts supply, and technical consultation to ensure optimal equipment performance.',
      },
      {
        title: 'What is your approach to project implementation?',
        description:
          'Each project begins with a thorough assessment of client needs, followed by customized solution design, careful implementation, and ongoing support to ensure success.',
      },
      {
        title: 'How do you handle emergency technical support?',
        description:
          'We provide prompt response to technical emergencies with remote support and on-site visits when necessary to minimize production downtime.',
      },
      {
        title: 'What makes your services unique in the paper industry?',
        description:
          'Our combination of extensive technical expertise, international experience, and commitment to customer satisfaction sets us apart in delivering optimal solutions for paper manufacturers.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years Experience', amount: '10+' },
      { title: 'Projects Completed', amount: '100+' },
      { title: 'Client Countries', amount: '15+' },
      { title: 'Customer Satisfaction', amount: '98%' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Now',
        href: 'mailto:547587038@qq.com',
        target: '_blank',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Optimize Your<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Paper Production?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Let's discuss how our professional solutions can enhance your paper manufacturing process. <br class="hidden md:inline" />
      Contact me today for expert consultation.
    </Fragment>
  </CallToAction>
</Layout>
